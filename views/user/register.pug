extends ../layout

block content
  form(method='POST', action='')
    legend Register
    .form-group
      label(for='name') Name
      input.form-control(type='text', name='name' , autofocus)
    .form-group
      label(for='username') Username
      input.form-control(type='text', name='username', autofocus)
    .form-group
      label(for='email') Email
      input.form-control(type='text', name='email')
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password')
    .form-group
      label(for='password2')  Confirm Password
      input.form-control(type='password', name='password2')
    button.btn.btn-primary(type='submit', value='submit') Register

