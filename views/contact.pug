extends ./layout

block styles
    link(href='/stylesheets/contact.css', rel='stylesheet')

block content
  section#contact.content-section.text-center
    .contact-section
      .container
        h2 Contact Us
        p
          | Feel free to shout us by feeling the contact form or visiting our social network sites like Fackebook,Whatsapp,Twitter.
        .row
          .col-md-8.col-md-offset-2
            form.form-horizontal
              .form-group
                label(for='exampleInputName2') Name
                input#exampleInputName2.form-control(placeholder='Jane Doe', type='text')
              .form-group
                label(for='exampleInputEmail2') Email
                input#exampleInputEmail2.form-control(placeholder='jane.doe@example.com', type='email')
              .form-group
                label(for='exampleInputText') Your Message
                textarea.form-control(placeholder='Description')
              button.btn.btn-default(type='submit') Send Message
            hr
            h3 Our Social Sites
            ul.list-inline.banner-social-buttons
              li
                a.btn.btn-default.btn-lg(href='#')
                  i.fa.fa-twitter
                    span.network-name Twitter
              li
                a.btn.btn-default.btn-lg(href='#')
                  i.fa.fa-facebook
                    span.network-name Facebook
              li
                a.btn.btn-default.btn-lg(href='#')
                  i.fa.fa-youtube-play
                    span.network-name Youtube
